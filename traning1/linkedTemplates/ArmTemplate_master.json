{
	"$schema": "http://schema.management.azure.com/schemas/2015-01-01/deploymentTemplate.json#",
	"contentVersion": "1.0.0.0",
	"parameters": {
		"factoryName": {
			"type": "string",
			"metadata": "Data Factory name",
			"defaultValue": "traning1"
		},
		"AzureBlobStorage1_connectionString": {
			"type": "secureString",
			"metadata": "Secure string for 'connectionString' of 'AzureBlobStorage1'"
		},
		"AzureBlobStorage2_connectionString": {
			"type": "secureString",
			"metadata": "Secure string for 'connectionString' of 'AzureBlobStorage2'"
		},
		"Azure_add_column_connectionString": {
			"type": "secureString",
			"metadata": "Secure string for 'connectionString' of 'Azure_add_column'"
		},
		"dest_data_lake2_connectionString": {
			"type": "secureString",
			"metadata": "Secure string for 'connectionString' of 'dest_data_lake2'"
		},
		"source_data_lake2_connectionString": {
			"type": "secureString",
			"metadata": "Secure string for 'connectionString' of 'source_data_lake2'"
		},
		"trigger1_properties_typeProperties_scope": {
			"type": "string",
			"defaultValue": "/subscriptions/0790cd4a-a2e5-4340-a7a3-7b4d07d7473e/resourceGroups/course1/providers/Microsoft.Storage/storageAccounts/sourceatalake1"
		},
		"containerUri": {
			"type": "string",
			"metadata": "URI to storage account containing linked ARM templates"
		},
		"containerSasToken": {
			"type": "string",
			"metadata": "Sas token to storage account containing linked ARM templates"
		}
	},
	"variables": {
		"factoryId": "[concat('Microsoft.DataFactory/factories/', parameters('factoryName'))]"
	},
	"resources": [
		{
			"name": "traning1_ArmTemplate_0",
			"type": "Microsoft.Resources/deployments",
			"apiVersion": "2018-02-01",
			"properties": {
				"mode": "incremental",
				"templateLink": {
					"uri": "[concat(parameters('containerUri'), '/ArmTemplate_0.json', parameters('containerSasToken'))]",
					"contentVersion": "1.0.0.0"
				},
				"parameters": {
					"factoryName": {
						"value": "[parameters('factoryName')]"
					},
					"AzureBlobStorage1_connectionString": {
						"value": "[parameters('AzureBlobStorage1_connectionString')]"
					},
					"AzureBlobStorage2_connectionString": {
						"value": "[parameters('AzureBlobStorage2_connectionString')]"
					},
					"Azure_add_column_connectionString": {
						"value": "[parameters('Azure_add_column_connectionString')]"
					},
					"dest_data_lake2_connectionString": {
						"value": "[parameters('dest_data_lake2_connectionString')]"
					},
					"source_data_lake2_connectionString": {
						"value": "[parameters('source_data_lake2_connectionString')]"
					},
					"trigger1_properties_typeProperties_scope": {
						"value": "[parameters('trigger1_properties_typeProperties_scope')]"
					}
				}
			},
			"dependsOn": []
		}
	]
}